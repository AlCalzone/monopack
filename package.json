{
  "name": "@alcalzone/monopack",
  "version": "1.4.0",
  "description": "Like `npm pack` or `yarn pack`, but for entire monorepos.",
  "main": "build/cli.js",
  "types": "build/cli.d.ts",
  "files": [
    "bin/**",
    "build/**"
  ],
  "bin": "bin/cli.js",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "repository": "https://github.com/AlCalzone/monopack.git",
  "author": "Dominic Griesel <d.griesel@gmx.net>",
  "license": "MIT",
  "scripts": {
    "lint:ts": "eslint --ext .ts \"src/**/*.ts\"",
    "lint": "yarn run lint:ts",
    "prebuild": "rimraf ./build",
    "build": "tsc -p tsconfig.build.json",
    "check": "tsc -p tsconfig.build.json --noEmit",
    "watch": "yarn run build --watch",
    "release": "release-script"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.1.1",
    "@tsconfig/node20": "^20.1.9",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^20.19.33",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@alcalzone/pak": "^0.12.0",
    "fs-extra": "^10.1.0",
    "p-queue": "^8.1.0",
    "tar": "^7.5.9"
  },
  "packageManager": "yarn@4.12.0"
}
